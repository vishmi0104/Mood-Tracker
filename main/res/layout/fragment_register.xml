<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/md_theme_light_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <!-- Registration Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/register_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cardBackgroundColor="@color/md_theme_light_surface"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Registration Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"
                    android:text="Create Account"
                    android:textAppearance="@style/TextAppearance.HabitMate.HeadlineMedium"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"
                    android:text="Join us to start your wellness journey"
                    android:textAppearance="@style/TextAppearance.HabitMate.BodyMedium"
                    android:textColor="@color/md_theme_light_onSurfaceVariant" />

                <!-- Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_name"
                    style="@style/Widget.HabitMate.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/name"
                    app:startIconDrawable="@drawable/ic_add"
                    app:startIconTint="@color/md_theme_light_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/TextAppearance.HabitMate.BodyLarge"
                        android:textColor="@color/md_theme_light_onSurface" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_email"
                    style="@style/Widget.HabitMate.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/email"
                    app:startIconDrawable="@drawable/ic_add"
                    app:startIconTint="@color/md_theme_light_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:textAppearance="@style/TextAppearance.HabitMate.BodyLarge"
                        android:textColor="@color/md_theme_light_onSurface" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_password"
                    style="@style/Widget.HabitMate.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/password"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/md_theme_light_primary"
                    app:startIconDrawable="@drawable/ic_settings"
                    app:startIconTint="@color/md_theme_light_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textAppearance="@style/TextAppearance.HabitMate.BodyLarge"
                        android:textColor="@color/md_theme_light_onSurface" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_confirm_password"
                    style="@style/Widget.HabitMate.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:hint="@string/confirm_password"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/md_theme_light_primary"
                    app:startIconDrawable="@drawable/ic_settings"
                    app:startIconTint="@color/md_theme_light_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textAppearance="@style/TextAppearance.HabitMate.BodyLarge"
                        android:textColor="@color/md_theme_light_onSurface" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Register Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_register"
                    style="@style/Widget.HabitMate.Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/sign_up"
                    android:textAppearance="@style/TextAppearance.HabitMate.LabelLarge"
                    android:textColor="@color/md_theme_light_onPrimary"
                    app:icon="@drawable/ic_home"
                    app:iconGravity="textStart" />

                <!-- Divider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/md_theme_light_outlineVariant" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:text="OR"
                        android:textAppearance="@style/TextAppearance.HabitMate.BodySmall"
                        android:textColor="@color/md_theme_light_onSurfaceVariant" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/md_theme_light_outlineVariant" />

                </LinearLayout>

                <!-- Social Register Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_google_register"
                        style="@style/Widget.HabitMate.Button.Secondary"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Google"
                        android:textAppearance="@style/TextAppearance.HabitMate.LabelMedium"
                        android:textColor="@color/md_theme_light_primary"
                        app:icon="@drawable/ic_add"
                        app:iconGravity="textStart" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_apple_register"
                        style="@style/Widget.HabitMate.Button.Secondary"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Apple"
                        android:textAppearance="@style/TextAppearance.HabitMate.LabelMedium"
                        android:textColor="@color/md_theme_light_primary"
                        app:icon="@drawable/ic_add"
                        app:iconGravity="textStart" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Error Message -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/error_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/md_theme_light_errorContainer"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_add"
                    app:tint="@color/md_theme_light_onErrorContainer" />

                <TextView
                    android:id="@+id/tv_error_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Invalid email or password"
                    android:textAppearance="@style/TextAppearance.HabitMate.BodyMedium"
                    android:textColor="@color/md_theme_light_onErrorContainer" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Loading Indicator -->
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loading_indicator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:indicatorColor="@color/md_theme_light_primary"
            app:trackColor="@color/md_theme_light_surfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/error_card" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
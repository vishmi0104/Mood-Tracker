<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background_pink"
    android:fitsSystemWindows="true">

    <!-- Ocean Blue Background Element -->
    <View
        android:id="@+id/ocean_blue_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FF0077BE"
        android:alpha="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo Container -->
    <FrameLayout
        android:id="@+id/logo_container"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/tagline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:scaleType="fitCenter" />

    </FrameLayout>

    <!-- Tagline -->
    <TextView
        android:id="@+id/tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Your Wellness Companion"
        android:textAppearance="@style/TextAppearance.HabitMate.BodyLarge"
        android:textColor="@color/md_theme_light_onPrimary"
        android:alpha="0.9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_container"
        app:layout_constraintBottom_toTopOf="@+id/version_info" />

    <!-- Version Info -->
    <TextView
        android:id="@+id/version_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Version 1.0"
        android:textAppearance="@style/TextAppearance.HabitMate.BodySmall"
        android:textColor="@color/md_theme_light_onPrimary"
        android:alpha="0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tagline"
        app:layout_constraintBottom_toTopOf="@+id/loading" />

    <!-- Animated Progress Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/loading"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:indeterminate="true"
        app:indicatorColor="@color/md_theme_light_onPrimary"
        app:trackColor="@color/md_theme_light_onPrimary"
        app:trackThickness="4dp"
        app:indicatorSize="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/version_info"
        app:layout_constraintBottom_toTopOf="@+id/loading_text" />

    <!-- Loading Text -->
    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Loading..."
        android:textAppearance="@style/TextAppearance.HabitMate.BodyMedium"
        android:textColor="@color/md_theme_light_onPrimary"
        android:alpha="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loading"
        app:layout_constraintBottom_toTopOf="@+id/decorative_1" />

    <!-- Decorative Elements -->
    <ImageView
        android:id="@+id/decorative_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_water"
        android:alpha="0.3"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loading_text"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/decorative_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_mood"
        android:alpha="0.25"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loading_text"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/decorative_3"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_home"
        android:alpha="0.2"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>